<%- include('partials/header.ejs') %>
<section class="text-center">
    <h4 ><strong>Orders</strong></h4>
    </section>

<div class="row">
    <div class="col-md-12">
      
       <div class="table-responsive">
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">Order Id</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Contact</th>
                <th scope="col">table</th>
                
                <th scope="col" style="width:20%"></th>
              </tr>
            </thead>
            <tbody>
            
              <%
              if(modelData !=null){
              var i=1;
              var checkoutprice = 0;
              modelData.forEach(function(data){
               
              %>
              <tr>
                <td><%=data.id %></td>
                <td><%=data.name %></td>
                <td><%=data.address %></td>
                <td><%=data.contactno %></td>
                <td><%=data.tableno %></td>
              
                <td>
                  <a href="/orders-items?id=<%=data.id %>" class="btn btn-sm btn-info btn-circle"><i class="fa fa-eye"></i></a> 
                 <%
                 if(data.status ==1){
                 %>
                 <a href="/orders-done?id=<%=data.id %>" class="btn btn-sm btn-success btn-circle"><i class="fa fa-check"></i></a> 
                 <%
                 } else {
                 %>
Order Deliver
                 <%} %>
                </td>
              </tr>
              <%  i++; }) %>

            <% } else{ %>
                <tr>
                    <td colspan="5">No Data Found</td>
                </tr>
            <% } %>
            </tbody>
         
          </table>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>